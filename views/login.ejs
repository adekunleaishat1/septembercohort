<body>
        <form class="w-50 mx-auto px-3 py-3 shadow-md border" action="/user/login" method="post">
            <h1 class="text-center mt-3">Login</h1>
            <% if (errormessage) { %>
                  <small class="alert alert-danger"><%= errormessage %></small>
            <% } %>
            <input name="email" class="form-control mt-3" type="text" placeholder="Email">
            <input name="password" class="form-control mt-3" type="text" placeholder="Password">
            <button type="submit" class="btn btn-dark mt-3">Logim</button>
        </form>
</body>
